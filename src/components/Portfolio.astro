  {
    id: 1,
    title: "СОВРЕМЕННАЯ КВАРТИРА",
    category: "ЖИЛОЙ ИНТЕРЬЕР",
    area: "85 М²",
    image: "https://images.unsplash.com/photo-1586023492125-27b2c045efd7?w=600&h=400&fit=crop",
    year: "2024",
  },
  {
